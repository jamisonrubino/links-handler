<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<%= link_to "/new_sites", "New Sites", class: "new_sites_link" %>

<table>

  <thead>
    <tr>
      <th>Author</th>
      <th>Url</th>
      <th>Css</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.author %></td>
        <td><%= site.url %></td>
        <td><%= site.css %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
